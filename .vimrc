set path=~/codebase/builder-test
set number
set background=dark
colorscheme slate


set tabstop=2
set shiftwidth=2
set expandtab

set hlsearch
set incsearch

set textwidth=80

set nocompatible
syntax on
filetype plugin indent on

" Show trailing whitespace:
" highlight ExtraWhitespace ctermbg=darkblue guibg=darkblue
" match ExtraWhitespace /\s\+$/           

" Turn of beeping
autocmd GUIEnter * set vb t_vb=
